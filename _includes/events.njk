<section id="Events">

    <hr>
<h2>Upcoming Trainings & Events</h2>
<div class="instruct">
<small>Select event for more information.</small> <small><span class="mwt"><img src="/img/lil_tree.png" alt="This is a MWT sponsored training"> Denotes a <i>Maine Working Together</i> event.</small>
</div>
        {%- for event in collections.event  -%}
        <div class="row row-striped">
            <div class="ps5">
        <details>
            <summary>
            {{ event.data.title }} {% if event.data.mwt === true %}<span class="mwt"><img src="/img/lil_tree.png" alt="This is a MWT sponsored training"></span>{% endif %} <br>
            
                {% if event.data.dates %}
                <span class="lil_summary list-inline-item"><i class="fa fa-calendar-o" aria-hidden="true"></i> <time>{{ event.data.dates }}</time> </span>
                {% endif %}
                {% if event.data.time %}
                <span class="lil_summary list-inline-item"><i class="fa fa-clock-o" aria-hidden="true"></i> <time>{{ event.data.time }}</time> </span>
                {% endif %}
                {% if event.data.cost %}
            <span class="lil_summary list-inline-item">
                <span class="mwt-green">&dollar;</span>{{ event.data.cost }} </span>
            {% endif %}
            {% if event.data.location %}
            <span class="lil_summary list-inline-item no-right-border"><i class="fa fa-location-arrow" aria-hidden="true"></i> {{ event.data.location }} </span>
            {% endif %}
            
            </summary>
           <div class="container"> {{ event.templateContent | safe }} </div>
            <a class="btn btn-primary" target="_blank" title="Register for {{ event.data.title}}" href="{{ event.data.registration_link}}" role="link">Register and Learn More</a>
            
        </details>
    </div>
    </div>
            {%- endfor -%}  
</section>